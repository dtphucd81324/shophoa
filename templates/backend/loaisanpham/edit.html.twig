{% extends "backend/layouts/layout.html.twig" %}

{% block title %}
Cập nhật loại sản phẩm
{% endblock %}

{% block headline %}
Cập nhật loại sản phẩm
{% endblock %}

{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="POST" action="/shop/backend/loaisanpham/edit.php?lsp_ma={{ loaisanpham.lsp_ma }}">
    <div class="form-group">
        <label for="lsp_ma">Mã loại sản phẩm</label>
        <input type="text" class="form-control" name="lsp_ma" id="lsp_ma" placeholder="Mã loại sản phẩm" readonly value="{{ loaisanpham.lsp_ma }}" />
        <small id="lsp_maHelp" class="form-text text-muted">Mã loại sản phẩm không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="lsp_ten">Tên loại sản phẩm</label>
        <input type="text" class="form-control" name="lsp_ten" id="lsp_ten" placeholder="Tên loại sản phẩm"  value="{{ loaisanpham.lsp_ten }}"/>
    </div>
    <div class="form-group">
        <label for="lsp_mota">Mô tả</label>
        <input type="text" class="form-control" name="lsp_mota" id="lsp_mota" placeholder="Mô tả loại sản phẩm" value="{{ loaisanpham.lsp_mota }}" />
    </div>
    <button class="btn btn-primary" name="btnCapnhat">Cập nhật</button>
</form>
{% endblock %}
